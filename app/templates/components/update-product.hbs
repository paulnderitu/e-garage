{{#if updateProductForm}}
  <h4>Update {{product.make}}'s {{product.model}} {{product.price}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=product.title}}
      </div>

      <div class="form-group">
        <label for="make">Make</label>
        {{input value=make id="make" placeholder=product.make}}
      </div>

      <div class="form-group">
        <label for="model">Model</label>
        {{input value=modle id="model" placeholder=product.model}}
      </div>

      <div class="form-group">
        <label for="image">Image Url</label>
        {{input value=image id="image" placeholder=product.image}}
      </div>

      <div class="form-group">
        <label for="price">Price</label>
        {{input value=price id="price" placeholder=product.price}}
      </div>

      <button {{action 'update' product}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateProductForm'}}>Update</button>
{{/if}}
